/**explore.wxss**/

page {
  background-color: #fff;
  font-family: PingFangSC-Thin, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.iconfont {
  display: inline-block;
  position: relative;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.container {
  position: relative;
  padding: 0;
  background-color: #fff;
  box-sizing: border-box;
  min-height: 100%;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.banner {
  width: 750rpx;
  height: 400rpx;
  background: #000;
}

.cover-container {
  position: absolute;
  left: 100rpx;
  top: 210rpx;
  width: 300rpx;
  height: 300rpx;
  border:10rpx #fff solid;
}

.cover {
  width: 300rpx;
  height: 300rpx;
}

.title {
  position: absolute;
  top: 300rpx;
  left: 450rpx;
  display: block;
  color: #fff;
  font-size: 50rpx;
  text-align: left;
  line-height: 60rpx;
  padding-top: 30rpx;
}

.author {
  position: absolute;
  left: 450rpx;
  display: block;
  text-align: left;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #8a8a8a;
}

.creater {
  width: 750rpx;
  margin: 0 auto;
  min-height: 100%;
  background: #fff;
}

.info-conainter {
  width: 550rpx;
  margin: 240rpx auto 20rpx;
}


.text {
  display: block;
  font-size: 40rpx;
  line-height: 60rpx;
  text-align: center;
  color: #000;
  word-wrap: break-word;
  width: 550rpx;
}

.tips {
  color: #bfbfbf;
  text-align: center;
}

.toolbar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: baseline;
  align-content: flex-start;
}

.photo-logo {
  color: #fff;
  position: absolute;
  font-size: 80rpx;
  right: 0;
  bottom: 0;
}

.toolbar-item {
  width: 250rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: baseline;
  align-content: flex-start;
  color: #8a8a8a;
}

.option-tip {
  padding-left: 15rpx;
}
