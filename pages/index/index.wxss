.loader-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.loader {
  width: 112px;
  margin: 0 auto;
  height: 20px;
  position: relative;
  animation: fade 2s infinite;
}

.loader text {
  position: absolute;
  top: 0px;
  font-family: PingFangSC-Thin, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  width:16px;
  height:16px;
  line-height: 16px;
  color: #8a8a8a;
  text-transform: uppercase;
  font-size: 16px;
  text-align: center;

}

.loader text:nth-child(1){
  left:0px;
  animation: l 2s ease-in-out 0s 1 normal;
}

.loader text:nth-child(2){
  left:16px;
  animation: o 2s ease-in-out 0s 1 normal;
}

.loader text:nth-child(3){
  left:32px;
  animation: a 2s ease-in-out 0s 1 normal;
}
.loader text:nth-child(4){
  left:48px;
  animation: d 2s ease-in-out 0s 1 normal;
}
.loader text:nth-child(5){
  left:64px;
  animation: i 2s ease-in-out 0s 1 normal;
}
.loader text:nth-child(6){
  left:80px;
  animation: n 2s ease-in-out 0s 1 normal;
}
.loader text:nth-child(7){
  left:96px;
  animation: g 2s ease-in-out 0s 1 normal;
}
.loader text:nth-child(8){
  left:96px;
  animation: g 2s ease-in-out 0s 1 normal;
}
@keyframes l {
	0%		{top: -400px;left: -100px}
	100%	{transform: rotate(1080deg);top: 0px;left:0px;}
}
@keyframes o {
	0%		{top: 400px;left: -100px}
	100%	{transform: rotate(1080deg);top: 0px;left:16px;}
}
@keyframes a {
	0%		{top: -400px;left: -32px}
	100%	{transform: rotate(1080deg);top: 0px;left:32px;}
}
@keyframes d {
	0%		{top: 400px;left:  48px}
	100%	{transform: rotate(1080deg);top: 0px;left:48px;}
}
@keyframes i {
	0%		{top: -400px;left: 164px}
	100%	{transform: rotate(1080deg);top: 0px;left:64px;}
}
@keyframes n {
	0%		{top: 400px;left: 180px}
	100%	{transform: rotate(1080deg);top: 0px;left:80px;}
}
@keyframes g {
	0%		{top: -400px;left: 196px}
	100%	{transform: rotate(1080deg);top: 0px;left:96px;}
}
@keyframes fade {
  50% {
    opacity: 0.3;
  }

  100% {
    opacity: 1;
  }
}