/**explore.wxss**/
page {
  background-color: #eee;
}

.container {
  padding: 0;
  background-color: #fff;
  box-sizing: border-box;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.nav {
  position: fixed;
  display: flex;
  flex-direction: row;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.nav-item {
  width: 120rpx;
  position: relative;
  align-items: center;
  text-align: center;
  justify-content: center;
  background-color: #fff;
  font-size: 36rpx;
}

.tab {
  color: #888;
  height: 100rpx;
  line-height: 100rpx;
}

.tab.selected {
  color: #000;
}

.tab.selected::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 6rpx;
  background-color: #000;
}
.content.withNav{
  top: 100rpx;
}
.content {
  height: 100%;
  background: #eee;
}

.item {
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-photo {
  width: 100%;
  height: 410rpx;
  margin: 0;
  padding: 0;
  border: 0;
}
.item-title{
  font-family: PingFangSC-Regular,-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  color: #000;
  font-size: 46rpx;
  text-align: center;
  line-height: 60rpx;
  width: 598rpx;
  padding-top: 76rpx;
  padding-bottom: 20rpx;
}
.item-word {
  font-family: PingFangSC-Thin,-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: center;
  color: #888;
  word-wrap: break-word;
  width: 640rpx;
  padding-bottom: 60rpx;
}
.item-meta{
  font-family: PingFangSC-Thin,-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  width: 640rpx;
}
.meta-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx; 
}
.userinfo{
  height: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width:40rpx;
  height:40rpx;
  flex: 1;
}
.avatar image{
  width:40rpx;
  height:40rpx;
}
.nickname{
  flex: 1;
  width:100rpx;
  color: #aaa;
  padding-left: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 40rpx;
}
.time{
  flex: 1;
  text-align: right;
  color: #aaa;
}
